// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model Testimonials {
  id          Int    @id @default(autoincrement())
  message     String
  name        String @unique
  designation String
}

model Subscribers {
  id      Int     @id @default(autoincrement())
  name    String?
  phone   String?
  address String?
  email   String  @unique
}

model ShowCaseCategory {
  id           Int        @id @default(autoincrement())
  name         String
  description  String?    @db.Text
  ShowCaseItem ShowCase[]
}

model ShowCase {
  id               Int               @id @default(autoincrement())
  name             String
  slug             String            @unique
  address          String?
  latitude         String?
  longitude        String?
  description      String            @db.Text
  type             String
  images           ShowCaseImages[]
  metadata         ShowCaseMetaData?
  showCaseCategory ShowCaseCategory  @relation(fields: [CategoryId], references: [id])
  CategoryId       Int
}

model ShowCaseImages {
  id         Int      @id @default(autoincrement())
  key        String
  showCase   ShowCase @relation(fields: [showCaseId], references: [id])
  showCaseId Int
}

model ShowCaseMetaData {
  id          Int      @id @default(autoincrement())
  showCase    ShowCase @relation(fields: [showCaseId], references: [id])
  showCaseId  Int      @unique
  keywords    String?  @db.Text
  description String?  @db.Text
  ogImage     String?
}
